<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/DatePickerTheme</item>
    </style>

    <style name="App" />

    <!-- ========TEXT_VIEW START========-->
    <style name="App.Text" parent="TextAppearance.AppCompat" />

    <style name="App.Text.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Text.Title.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Text.Title.Small">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="App.Text.Title.Small.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="App.Text.Default">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="App.Text.Default.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="App.Text.Tag">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:background">@drawable/rect_green_stroke_8dp_corner</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="App.Text.Pink">
        <item name="android:paddingStart">@dimen/control_small_margin</item>
        <item name="android:paddingEnd">@dimen/control_small_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rect_pink_solid_8dp_corner</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="App.Text.Date">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- ========TEXT_VIEW END========-->


    <!-- ========EDIT_TEXT START========-->


    <style name="App.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="App.EditText.CreateEvent">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">@dimen/control_medium_margin</item>
        <item name="android:paddingEnd">@dimen/control_medium_margin</item>
        <item name="android:background">@drawable/rect_grey_solid_light_stroke__grey_12dp_corner</item>

    </style>

    <style name="App.EditText.CreateEvent.Big">
        <item name="android:gravity">left|top</item>
        <item name="android:minHeight">180dp</item>
        <item name="android:padding">@dimen/control_medium_margin</item>
    </style>

    <style name="App.EditText.Filter">
        <item name="android:paddingStart">@dimen/control_big_margin</item>
        <item name="android:background">@drawable/rect_green_stroke_dark_solid_20dp_corner</item>
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="App.EditText.Login">
        <item name="android:paddingStart">@dimen/control_big_margin</item>
        <item name="android:paddingEnd">@dimen/control_big_margin</item>
        <item name="android:drawablePadding">@dimen/control_big_margin</item>
        <item name="android:background">@drawable/selector_et_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textCursorDrawable">@color/colorGreen</item>
    </style>

    <style name="App.EditText.ProfileSettings">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">@dimen/control_medium_margin</item>
        <item name="android:paddingEnd">@dimen/control_medium_margin</item>
        <item name="android:background">@drawable/rect_grey_solid_light_stroke__grey_20dp_corner</item>
    </style>
    <!-- ========EDIT_TEXT END========-->


    <!-- ========BUTTONS START========-->
    <style name="App.Button" />

    <style name="App.Button.Colored">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="App.Button.Colored.Blue">
        <item name="android:background">@drawable/rect_blue_18dp_corner</item>
    </style>

    <style name="App.Button.Colored.Green">
        <item name="android:background">@drawable/rect_green_18dp_corner</item>
    </style>

    <style name="App.Button.Colored.Transparent">
        <item name="android:background">@drawable/rect_green_stroke_dark_solid_20dp_corner</item>
    </style>

    <style name="App.ToggleButton" />

    <style name="App.ToggleButton.Filter">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/control_big_margin</item>
        <item name="android:paddingEnd">@dimen/control_big_margin</item>
        <item name="android:textColor">@color/selector_btn_green_text_color</item>
    </style>
    <!-- ========BUTTONS END========-->


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
